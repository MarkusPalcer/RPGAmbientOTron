<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:valueConverters="clr-namespace:AmbientOTron.ValueConverters">
    <valueConverters:BooleanToAnyConverter x:Key="BooleanToHiddenConverter">
        <valueConverters:BooleanToAnyConverter.TrueValue>
            <Visibility>Visible</Visibility>
        </valueConverters:BooleanToAnyConverter.TrueValue>
        <valueConverters:BooleanToAnyConverter.FalseValue>
            <Visibility>Hidden</Visibility>
        </valueConverters:BooleanToAnyConverter.FalseValue>
    </valueConverters:BooleanToAnyConverter>
</ResourceDictionary>